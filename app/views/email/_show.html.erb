<div class="email_show">


	
 	<h4 class="email_object"> Objet du mail : <%= @email.object %></h4>   <!--all[email.id].-->
	<hr>
	<p class ="email_content"> <%= @email.body %></p>

 <div id='mail-display-buttons'>
    <%= link_to email_path(@email), data: {:confirm => 'Are you sure?'}, :method => :delete, remote: true  do %>
      <%= fa_icon "trash-alt", style: "color:orange;"%>
    <% end %>
    <%= link_to email_path(@email,invertRead: true), remote: true, :method => :put do %>
      <%= fa_icon "trash-alt", style: "color:blue;"%>
    <% end %>
  </div>